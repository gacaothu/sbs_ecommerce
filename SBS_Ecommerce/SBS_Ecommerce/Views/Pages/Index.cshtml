@model SBS_Ecommerce.Models.Page
@{
    ViewBag.Title = Model.Name;
    Layout = ViewBag.Layout;
}



<title>
    @Model.Name
</title>

<style>
    .am-wrapper {
        padding: 10px;
    }
</style>

@if (ViewBag.Layout == null)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="shortcut icon" href="~/Content/Admin/img/favicon.png">
        <title>@Model.Name</title>
        <link rel="stylesheet" type="text/css" href="~/Content/Admin/lib/stroke-7/style.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/Admin/lib/jquery.nanoscroller/css/nanoscroller.css" />
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        <link rel="stylesheet" type="text/css" href="~/Content/Admin/lib/jquery.vectormap/jquery-jvectormap-1.2.2.css" />
        <link rel="stylesheet" href="~/Content/Admin/css/style.css" type="text/css" />
        <link rel="stylesheet" type="text/css" href="/Content/Theme/Default/stylesheet/font-awesome.css" media="all">


        <script src="/Content/Admin/lib/jquery/jquery.min.js" type="text/javascript"></script>
        <script src="/Content/Admin/lib/jquery.nanoscroller/javascripts/jquery.nanoscroller.js" type="text/javascript"></script>
        <script src="/Content/Admin/js/main.js" type="text/javascript"></script>
        <script src="/Content/Admin/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="/Content/Admin/lib/jquery-flot/jquery.flot.js" type="text/javascript"></script>
    </head>

    <body>
        <div class="am-wrapper">
            @Html.Raw(Model.Content)
        </div>
    </body>
</html>
}
else
{
    <div class="main-wrap">
        <div class="container">
            @Html.Raw(Model.Content)
        </div>
    </div>
}