@using SBS_Ecommerce.Models;
@using SBS_Ecommerce.Framework;

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";

    List<Order> items = ViewBag.Data;
    var tag = ViewBag.Tag;
    var startDate = ViewBag.StartDate;
    var endDate = ViewBag.EndDate;
    var textSearch = ViewBag.TextSearch;
}
<script src="~/Content/Admin/js/order-management.js"></script>

<div class="main-content">
    <div class="row2">
        <div class="col-sm-12 col-md-12">
            <div class="panel panel-dark">
                <div class="panel-heading">
                    <h3><a href="#" class="btn btn-primary am-toggle-left-sidebar"><i class="icon s7-menu"></i></a> @tag</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Orders", "Admin", FormMethod.Get, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken();
                        <div class="row2">
                            <div class="container-fluid">
                                <input name="kind" value="@ViewBag.Kind" hidden />
                                <div class="col-md-3">
                                    <label class="control-label-left">Start Date</label>
                                    <div data-min-view="2" data-date-format="yyyy-mm-dd" data-link-field="dtp_input1"
                                         class="input-group date datetimepicker col-md-12 col-xs-12">
                                        <input id="txtStartDate" name="startDate" size="16" type="text" value="@startDate" class="form-control" placeholder="Start Date">
                                        <span class="input-group-addon btn btn-primary"><i class="icon-th s7-date"></i></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label-left">End Date</label>
                                    <div data-min-view="2" data-date-format="yyyy-mm-dd" data-link-field="dtp_input1"
                                         class="input-group date datetimepicker col-md-12 col-xs-12">
                                        <input id="txtEndDate" name="endDate" size="16" type="text" value="@endDate" class="form-control" placeholder="End Date">
                                        <span class="input-group-addon btn btn-primary"><i class="icon-th s7-date"></i></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label class="control-label-left">Search</label>
                                    <div class="input-group col-md-3xs-mb-5">
                                        <input id="txtTextSearch" name="textSearch" size="16" type="text" value="@textSearch" class="form-control" placeholder="Search">
                                        <span class="input-group-btn">
                                            <button type="submit" id="btnSearch" class="btn btn-primary btn-rc-sm">
                                                <i class="icon s7-search" style="font-weight:bold;"></i> Search
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <br />
                    <div class="row2">
                        <div class="col-sm-12">
                            <div class="widget widget-fullwidth widget-small">
                                <div class="widget-head">
                                    <div class="title"><strong> @tag</strong></div>
                                </div>
                                <table id="order-table" class="table table-striped table-hover table-fw-widget">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Submit Date</th>
                                            <th>Num of Products</th>
                                            <th>Total Amount</th>
                                            <th>Currency</th>
                                            <th>Option</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!items.IsNullOrEmpty())
                                        {
                                            foreach (var item in items)
                                            {
                                                <tr>
                                                    <td>@item.OrderId</td>
                                                    <td>@item.CreatedAt</td>
                                                    <td>@item.CountProduct</td>
                                                    <td>@item.TotalAmount</td>
                                                    <td>@item.Currency</td>
                                                    <td>
                                                        <a href="@Url.Action("OrderDetail", "Admin", new { id = item.OrderId })" class="btn btn-space btn-success btn-sm" title="View Detail">
                                                            <i class="icon s7-ribbon"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>