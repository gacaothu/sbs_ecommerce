@using SBS_Ecommerce.Models;
@model List<Blog>
@{
    ViewBag.Title = "Blog Manager";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    var msg = ViewBag.Message;
    var textMsg = ViewBag.TextMessage;
}
<style>
    .erorr{
        color:red;
        display:none;
        margin-left:38px;
    }
</style>

<script src="~/Content/ckeditor/ckeditor.js"></script>
<script src="~/Content/Admin/js/blogmanager.js"></script>

<!-- Modal -->

<div id="successModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">
                <div class="alert alert-success">
                    <strong>Success!</strong> <span id="contentAlert">Layout successful change</span>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="confirm-delete" data-id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="left:auto">
        <div class="modal-content">
            <div class="modal-header-main">
                <h3> Are you sure delete this Page?</h3>
            </div>
            <div class="footer-html">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger btn-ok" onclick="DeleteBlog($('#confirm-delete').attr('data-id'))">Delete</button>
            </div>
        </div>
    </div>
</div>

<div id="addBlogModal" tabindex="-1" role="dialog" class="modal fade colored-header">
    <div class="modal-dialog full-width">
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close-circle"></i></button>
                <h3 class="modal-title">Add Blog</h3>
            </div>
            <div class="modal-body form">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12" id="alert-err-msg" hidden>
                                            <div class="text-danger" style="white-space:pre-wrap"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="titleHTML">
                                    <span>Title &nbsp;</span>
                                    <input id="txtTitleHTML" type="text">
                                    <span class="erorr" id="errorTitle">The Title is required.</span>
                                </div>
                                <div class="imgSlider">
                                    <i class="glyphicon glyphicon-picture" style="font-size:60px"></i>
                                    <div style="padding-left:10px;">No image</div>
                                </div>
                                <div class="ThumbnailHtml">
                                    <button onclick="$('#imgThumbnail').trigger('click')" class="btn btn-success">Upload</button>
                                    <button onclick="RemoveImage(this)" class="btn btn-danger">Remove</button>
                                    <input style="display:none;" id="imgThumbnail" type="file" />
                                </div>
                                <div class="modal-body pointer">
                                    <textarea name="txtHTML" id="txtHTML" style="width:100%;height:250px;"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-12 col-md-12">
                    <button type="button" data-dismiss="modal" class="btn btn-default btn-rc-sm md-close"><i class="icon s7-close-circle"></i>Close</button>
                    <button type="button" class="btn btn-primary btn-rc-sm" id="add-edit-btn" value="Save" onclick="SaveBlog()"><i class="icon s7-diskette"></i> Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="preBlockModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Preview Block</h3>
            </div>
            <div class="content-block">
            </div>
        </div>
    </div>
</div>

<div class="main-content">

    @*@if (!string.IsNullOrEmpty(msg) && !string.IsNullOrEmpty(textMsg))
        {
            if (msg == "1")
            {
                <div class="container-fluid padded">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="alert alert-success">
                                <button type="button" data-dismiss="alert" aria-label="Close" class="close"><span aria-hidden="true" class="s7-close"></span></button><span id="alert-msg-success">@textMsg</span>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            }
        }*@


    <div class="row2">
        <div class="col-md-12">
            <div class="panel panel-dark">
                <div class="panel-heading">
                    <h3><a href="#" class="btn btn-primary am-toggle-left-sidebar"><i class="icon s7-menu"></i></a>@ViewBag.Title</h3>
                </div>
                <div class="panel-body bordered">
                    <div class="row2">
                        <div class="container-fluid">
                            <div class="col-md-12 text-right">
                                <div style="height:32px;"></div>
                                <a onclick="ConfirmAddBlog()" class="btn btn-space btn-success btn-rc-sm"><i class="icon s7-plus"></i>Create Blog</a>

                            </div>
                        </div>
                    </div>
                    <div class="row2">
                        <div class="col-sm-12">
                            <div class="widget widget-fullwidth widget-small">
                                <div class="widget-head">
                                    <div class="title"><strong>@ViewBag.Title</strong></div>
                                </div>
                                <table id="table" class="table table-striped table-hover table-fw-widget">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th style="width:10%">Create at</th>
                                            <th style="width:10%">Status</th>
                                            <th style="width:20%">Operator</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @item.Title
                                            </td>
                                            <td>
                                                @item.CreatedAt
                                            </td>
                                            <td>
                                                @(item.Status == "1" ? "Active" : "Deactive")
                                            </td>
                                            <td>
                                                <a class="btn btn-sm btn-dark" onclick="ConfirmEditBlock('@item.BlogId')" title="Edit">
                                                    <i class="icon s7-pen"></i>
                                                </a>
                                                <a class="btn btn-sm btn-danger" onclick="ConfirmDelete(@item.BlogId)" title="Delete">
                                                    <i class="icon s7-trash"></i>
                                                </a>

                                                <a class="btn btn-sm btn-success" onclick="CommentBlog('@item.BlogId')" title="Comment">
                                                    Comment
                                                </a>

                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>