@using SBS_Ecommerce.Models;
@model List<Blog>
@{
    ViewBag.Title = "Blog Manager";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<link href="~/Content/Theme/Theme3/css/blogmanager.css" rel="stylesheet" />
<script src="~/Content/ckeditor/ckeditor.js"></script>

<!-- Modal -->
<div id="successModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <strong>Success!</strong> <span id="contentAlert">Layout successful change</span>.
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="confirm-delete" data-id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="left:auto">
        <div class="modal-content">
            <div class="modal-header">
                Are you sure delete this Page?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger btn-ok" onclick="DeleteBlog($('#confirm-delete').attr('data-id'))">Delete</button>
            </div>
        </div>
    </div>
</div>

<div id="addBlogModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Add Blog</h3>
            </div>
            <div class="titleHTML">
                <div style="padding-bottom:5px;">Title &nbsp;</div>
                <textarea id="txtTitleHTML" name="txtTitleHTML" type="text" style="width:100%;" ></textarea>
            </div>
            <div class="imgSlider">
                <i class="glyphicon glyphicon-picture" style="font-size:60px"></i>
                <div style="padding-left:10px;">No image</div>
            </div>
            <div class="ThumbnailHtml">
                @*<div class="glyphicon glyphicon-upload"></div>*@
                <button  onclick="$('#imgThumbnail').trigger('click')" class="btn btn-success">Upload</button>
                <button onclick="RemoveImage(this)" class="btn btn-danger">Remove</button>
                <input style="display:none;" id="imgThumbnail" type="file" />
            </div>
            <div class="modal-body pointer">
                <textarea name="txtHTML" id="txtHTML" style="width:100%;height:250px;"></textarea>
            </div>
            <div class="footer-html">
                <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal" style="margin-top:10px" />
                <input class="btn btn-success btn-ok" value="Save" type="button" onclick="SaveBlog()" style="margin-top:10px">
            </div>
        </div>
    </div>
</div>

<div id="preBlockModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Preview Block</h3>
            </div>
            <div class="content-block">
            </div>
        </div>
    </div>
</div>

<div class="main-content">
    <!--+general-chart("classes", "title", "height", "id", "counter value", "counter desc", tools enabled (use true or false))-->
    <div class="content-blockmanager">
        <div class="install-theme">
            <input onclick="ConfirmAddBlog()" class="btn btn-success" type="button" value="Create Page" />
            @*<input value="Upload" class="clr-btn-success" type="button"  style="margin-top:10px;text-align:right">*@
        </div>
        <table class="table table-striped table-hover table-fw-widget dataTable no-footer">
            <thead>
                <tr>
                    <th class="text-left" style="width:40%">Title</th>
                    <th class="text-center" style="width:10%">Create at</th>
                    <th class="text-center" style="width:10%">Status</th>
                    <th class="text-center" style="width:30%">Operator</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-left">
                            @item.Title
                        </td>
                        <td class="text-center">
                            @item.CreatedAt
                        </td>
                        <td class="text-center">
                            @(item.Status == "1" ? "Active" : "Deactive")
                        </td>
                        <td class="text-center">
                            <input value="Edit" type="button" class="btn btn-success" onclick="ConfirmEditBlock('@item.BlogId')" />
                            <input value="Delete" type="button" class="btn btn-danger" onclick="ConfirmDelete(@item.BlogId)" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<script src="~/Content/Theme/Theme3/js/blogmanager.js"></script>
