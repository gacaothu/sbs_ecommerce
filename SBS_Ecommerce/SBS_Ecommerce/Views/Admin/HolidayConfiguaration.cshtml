@model IEnumerable<SBS_Ecommerce.Models.DTOs.ConfigHolidayDTO>
@{
    ViewBag.Title = "Holiday Configuration";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<script src="~/Content/Admin/js/configuration-holiday.js"></script>
<div class="panel-body">
    @if (TempData["Message"] != null)
    {
        <div role="alert" class="alert alert-success alert-dismissible">
            <button type="button" data-dismiss="alert" aria-label="Close" class="close">
                <span aria-hidden="true" class="s7-close"></span>
            </button>
            <span class="icon s7-check"></span>@TempData["Message"]
        </div>
    }
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-4">
                Filter by year: @Html.DropDownList("Year", null, new { @class = "form-control" })    
            </div>
        </div>
    </div>

       
        <table class="table table-striped table-bordered" id="tblconfiguration-holiday">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.HolidayName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HolidayDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>Option</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HolidayName)
                        </td>
                        <td>
                            @(item.HolidayDate != null ? item.HolidayDate.Value.ToString("MM/dd/yyyy") : "")
                        </td>
                        <td>
                            @if (item.IsActive)
                            {
                                <div class="am-checkbox">
                                    <input checked disabled type="checkbox">
                                    <label for="check5"></label>
                                </div>
                            }
                            else
                            {
                                <div class="am-checkbox">
                                    <input disabled type="checkbox">
                                    <label for="check5"></label>
                                </div>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <button type="button" class="btn btn-space btn-success btn-sm" title="Edit" onclick="editHoliday(@item.Id)">
                                <i class="icon s7-pen"></i>
                            </button>
                            <button type="button" class="btn btn-space btn-danger btn-sm" onclick="showConfirm(@item.Id)" title="Delete">
                                <i class="icon s7-close"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button class="btn btn-space btn-success" onclick="addHoliday();">Add Holiday</button>
        <div id="form-add-edit-holiday" tabindex="-1" role="dialog" class="modal fade colored-header">
            <div class="modal-dialog custom-width">
                <div class="modal-content modal-content-holiday">

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div id="confirm-delete" tabindex="-1" role="dialog" class="modal fade" data-id="">
            <div class="modal-dialog custom-width">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
                        <p>Are you sure want to delete?</p>
                    </div>
                    <div class="footer-html">
                        <form action="@Url.Content("~/Admin/DeleteHoliday")" method="post">
                            <input type="hidden" id="idHoliday" name="id" />
                            <button type="button" data-dismiss="modal" class="btn btn-default md-close">Cancel</button>
                            <button id="delete-btn" type="submit" class="btn btn-danger md-close">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
