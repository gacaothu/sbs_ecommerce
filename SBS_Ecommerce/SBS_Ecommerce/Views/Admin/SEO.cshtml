@using SBS_Ecommerce.Framework;
@model List<SBS_Ecommerce.Models.SEO>

@{
    ViewBag.Title = "SEO Configuration";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";

}
<script src="~/Content/Admin/js/app-seo-manager.js"></script>

<div class="main-content">
    <div class="row2">
        <div class="col-md-12">
            <div class="panel panel-dark">
                <div class="panel-heading">
                    <h3><a href="#" class="btn btn-primary am-toggle-left-sidebar"><i class="icon s7-menu"></i></a>@ViewBag.Title</h3>
                </div>
                <div class="panel-body bordered">
                    <div class="row2">
                        <div class="container-fluid">
                            <div class="col-md-12 text-right">
                                <div style="height:32px;"></div>
                                <a onclick="showSEOModal()" class="btn btn-space btn-success btn-rc-sm"><i class="icon s7-plus"></i> Create SEO</a>
                            </div>
                        </div>
                    </div>
                    <div class="row2">
                        <div class="col-sm-12">
                            <div class="widget widget-fullwidth widget-small">
                                <div class="widget-head">
                                    <div class="title"><strong>@ViewBag.Title</strong></div>
                                </div>
                                <table id="seo-table" class="table table-striped table-hover table-fw-widget">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Url</th>
                                            <th>Keywords</th>
                                            <th>Description</th>
                                            <th>Option</th>
                                        </tr>
                                    </thead>
                                    @if (!Model.IsNullOrEmpty())
                                    {
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Title</td>
                                                <td>@item.Url</td>
                                                <td>@item.Keywords</td>
                                                <td>@item.Description</td>
                                                <td>
                                                    <a class="btn btn-sm btn-dark" onclick="openEdit(@item.Id)" title="Edit">
                                                        <i class="icon s7-pen"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-danger" onclick="showConfirm(@item.Id)" data-id="@item.Id" title="Delete">
                                                        <i class="icon s7-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="form-seo" tabindex="-1" role="dialog" class="modal fade colored-header">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <div class="modal-header-main">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close-circle"></i></button>
                <h3 class="modal-title">Add SEO</h3>
            </div>
            <div class="modal-body form">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label>Title</label>
                                            <input id="txtTitle" type="text" placeholder="Title" name="Title" class="form-control">
                                            <div class="validation-error">
                                                <span class="field-validation-error" data-valmsg-for="txtTitle" data-valmsg-replace="true" id="txtTitle_Err"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label>Url</label>
                                            <input id="txtUrl" type="text" placeholder="Url of page" name="Url" class="form-control">
                                            <div class="validation-error">
                                                <span class="field-validation-error" data-valmsg-for="txtUrl" data-valmsg-replace="true" id="txtUrl_Err"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label>Keyword</label>
                                            <input id="txtKeywords" type="text" placeholder="Keywords of page" name="Keywords" class="form-control">
                                            <div class="validation-error">
                                                <span class="field-validation-error" data-valmsg-for="txtKeywords" data-valmsg-replace="true" id="txtKeywords_Err"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label>Description</label>
                                            <textarea id="txtDescription" type="text" placeholder="Description" name="Description" class="form-control"></textarea>
                                            <div class="validation-error">
                                                <span class="field-validation-error" data-valmsg-for="txtDescription" data-valmsg-replace="true" id="txtDescription_Err"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-12 col-md-12">
                    <button type="button" data-dismiss="modal" class="btn btn-default btn-rc-sm md-close"><i class="icon s7-close-circle"></i>Close</button>
                    <button type="button" class="btn btn-primary btn-rc-sm" id="add-edit-seo-btn"><i class="icon s7-diskette"></i>Save</button>
                </div>
            </div>
            }
        </div>
    </div>
</div>

<div id="confirm-delete" tabindex="-1" role="dialog" class="modal fade">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
                <h3>Are you sure want to delete item?</h3>
            </div>
            <div class="footer-html">
                <button type="button" data-dismiss="modal" class="btn btn-default md-close">Cancel</button>
                <button id="delete-btn" type="button" class="btn btn-danger md-close" onclick="deleteItem($('#confirm-delete').data('id'))">Delete</button>
            </div>
        </div>
    </div>
</div>