@using SBS_Ecommerce.Framework;
@using SBS_Ecommerce.Models;
@{
    ViewBag.Title = "Delivery Date Scheduler";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    List<DeliveryScheduler> datas = ViewBag.Data;
}
<script src="~/Content/Admin/js/delivery-scheduler.js"></script>
<div class="panel-body">
    <table id="delivery-scheduler-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Time Slot</th>
                <th>Rate</th>
                <th>Weekday?</th>
                <th>Weekends?</th>
                <th>Status?</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Option</th>
            </tr>
        </thead>
        @if (!datas.IsNullOrEmpty())
        {
            <tbody>
                @foreach (var item in datas)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TimeSlot</td>
                        <td>@item.Rate</td>
                        <td>@item.IsWeekday</td>
                        <td>@item.IsWeekend</td>
                        <td>@item.IsActive</td>
                        <td>@item.CreatedAt</td>
                        <td>@item.UpdatedAt</td>
                        <td>
                            <button type="button" class="btn btn-space btn-success btn-sm" title="Edit" onclick="openEdit(@item.Id)">
                                <i class="icon s7-edit"></i>
                            </button>
                            <button type="button" class="btn btn-space btn-success btn-sm" onclick="showConfirm(@item.Id)" title="Delete">
                                <i class="icon s7-close"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>

    <button data-toggle="modal" type="button" class="btn btn-space btn-success" onclick="showModal()">Add Time Slot</button>
</div>

<!-- Modal -->
<div id="confirm-delete" tabindex="-1" role="dialog" class="modal fade" data-id="">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
                <p>Are you sure want to delete?</p>
            </div>
            <div class="footer-html">
                <button type="button" data-dismiss="modal" class="btn btn-default md-close">Cancel</button>
                <button id="delete-btn" type="button" class="btn btn-danger md-close" onclick="deleteDeliveryScheduler($('#confirm-delete').data('id'))">Delete</button>
            </div>
        </div>
    </div>
</div>

<div id="form-add-edit-scheduler" tabindex="-1" role="dialog" class="modal fade colored-header">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
                <h3 class="modal-title">Add Time Slot</h3>
            </div>
            <div class="modal-body form">
                <div class="form-group" id="errMsg" hidden>
                    <div class="text-danger" style="white-space:pre-wrap"></div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>From Hour</label>
                            <div data-start-view="0" data-date="1979-09-16T05:25:07Z" data-date-format="hh:ii" data-link-field="dtp_input1" class="input-group date datetimepicker">
                                <input id="txtFromHour" size="16" type="text" value="" class="form-control" placeholder="From Hour"><span class="input-group-addon btn btn-primary"><i class="icon-th s7-date"></i></span>
                            </div>
                            <div class="validation-error text-danger">
                                <span class="field-validation-valid" data-valmsg-for="txtFromHour" data-valmsg-replace="true" id="txtFromHour_Err"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>To Hour</label>
                            <div data-start-view="0" data-date="1979-09-16T05:25:07Z" data-date-format="hh:ii" data-link-field="dtp_input1" class="input-group date datetimepicker">
                                <input id="txtToHour" size="16" type="text" value="" class="form-control" placeholder="To Hour"><span class="input-group-addon btn btn-primary"><i class="icon-th s7-date"></i></span>
                            </div>
                            <div class="validation-error text-danger">
                                <span class="field-validation-valid" data-valmsg-for="txtToHour" data-valmsg-replace="true" id="txtToHour_Err"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Rate</label>
                    <input id="txtRate" type="number" placeholder="Rate Value" class="form-control">
                    <div class="validation-error text-danger">
                        <span class="field-validation-valid" data-valmsg-for="txtRate" data-valmsg-replace="true" id="txtRate_Err"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-default md-close">Cancel</button>
                <button id="add-update-scheduler-btn" type="button" class="btn btn-primary md-close" data-type="add">Add</button>
            </div>
        </div>
    </div>
</div>