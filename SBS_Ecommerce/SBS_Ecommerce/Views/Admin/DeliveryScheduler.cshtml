@using SBS_Ecommerce.Framework;
@using SBS_Ecommerce.Models;
@{
    ViewBag.Title = "Delivery Date Scheduler";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    List<DeliveryScheduler> datas = ViewBag.Data;
}
<script src="~/Content/Admin/js/app-delivery-scheduler.js"></script>

<div class="main-content">
    @if (TempData["Message"] != null)
    {
        <div class="container-fluid padded">
            <div class="row-fluid">
                <div class="span12">
                    @if (TempData["Status"] != null && (int)TempData["Status"] == -1)
                    {
                        <div class="alert alert-primary">
                            <button type="button" data-dismiss="alert" aria-label="Close" class="close">
                            <span aria-hidden="true" class="s7-close"></span></button><span id="alert-msg-success">@TempData["Message"]</span>
                            <br />
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <button type="button" data-dismiss="alert" aria-label="Close" class="close">
                            <span aria-hidden="true" class="s7-close"></span></button><span id="alert-msg-success">@TempData["Message"]</span>
                            <br />
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    <div class="row2">
        <div class="col-md-12">
            <div class="panel panel-dark">
                <div class="panel-heading">
                    <h3><a href="#" class="btn btn-primary am-toggle-left-sidebar"><i class="icon s7-menu"></i></a>@ViewBag.Title</h3>
                </div>
                <div class="panel-body bordered">
                    <div class="row2">
                        <div class="col-md-12 text-right">
                            <div style="height:32px;"></div>
                            <button data-toggle="modal" type="button" class="btn btn-space btn-success" onclick="addDeliveryScheduler()"><i class="icon s7-plus"></i> Add Time Slot</button>
                        </div>
                    </div>
                    <div class="row2">
                        <div class="col-sm-12">
                            <div class="widget widget-fullwidth widget-small">
                                <div class="widget-head">
                                    <div class="title"><strong>@ViewBag.Title</strong></div>
                                </div>
                                <table class="table table-striped table-hover table-fw-widget">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Time Slot</th>
                                            <th>Rate</th>
                                            <th>Weekday?</th>
                                            <th>Weekends?</th>
                                            <th>Actived?</th>
                                            <th>Created At</th>
                                            <th>Updated At</th>
                                            <th>Option</th>
                                        </tr>
                                    </thead>
                                    @if (!datas.IsNullOrEmpty())
                                    {
                                    <tbody>
                                        @foreach (var item in datas)
                                        {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.TimeSlot</td>
                                            <td>@item.Rate</td>
                                            <td>
                                                @if (item.IsWeekday)
                                                        {
                                                    <div class="am-checkbox">
                                                        <input id="check5" type="checkbox" checked disabled="">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                                        else
                                                        {
                                                    <div class="am-checkbox">
                                                        <input id="check5" type="checkbox" disabled="">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                            </td>
                                            <td>
                                                @if (item.IsWeekend)
                                                        {
                                                    <div class="am-checkbox">
                                                        <input checked disabled type="checkbox">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                                        else
                                                        {
                                                    <div class="am-checkbox">
                                                        <input disabled type="checkbox">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                        {
                                                    <div class="am-checkbox">
                                                        <input checked disabled type="checkbox">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                                        else
                                                        {
                                                    <div class="am-checkbox">
                                                        <input disabled type="checkbox">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                            </td>
                                            <td>@item.CreatedAt</td>
                                            <td>@item.UpdatedAt</td>
                                            <td>
                                                <button type="button" class="btn btn-space btn-dark btn-sm" title="Edit" onclick="openEdit(@item.Id)">
                                                    <i class="icon s7-pen"></i>
                                                </button>
                                                <button type="button" class="btn btn-space btn-danger btn-sm" onclick="showConfirm(@item.Id)" title="Delete">
                                                    <i class="icon s7-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                            }
                                    </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="confirm-delete" tabindex="-1" role="dialog" class="modal fade" data-id="">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
                <h3>Are you sure want to delete?</h3>
            </div>
            <div class="footer-html">
                <form action="@Url.Content("~/Admin/DeleteDeliveryScheduler")", method="post">
                    <input type="hidden" id="idDeliveryScheduler" name="id" />
                    <button type="button" data-dismiss="modal" class="btn btn-default md-close">Cancel</button>
                    <button id="delete-btn" type="submit" class="btn btn-danger md-close">Delete</button>
                </form>                
            </div>
        </div>
    </div>
</div>

<div id="form-add-edit-scheduler" tabindex="-1" role="dialog" class="modal fade colored-header">
    
</div>