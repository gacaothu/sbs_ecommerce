@using SBS_Ecommerce.Framework;
@using SBS_Ecommerce.Models;
@{
    ViewBag.Title = "Delivery Date Scheduler";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    List<DeliveryScheduler> datas = ViewBag.Data;
}
<script src="~/Content/Admin/js/delivery-scheduler.js"></script>

<div class="main-content">
    <div class="container-fluid padded">
        <div class="row-fluid">
            <div class="span12">
                <div id="alert-msg"></div>
            </div>
        </div>
    </div>

    <div class="row2">
        <div class="col-md-12">
            <div class="panel panel-dark">
                <div class="panel-heading">
                    <h3><a href="#" class="btn btn-primary am-toggle-left-sidebar"><i class="icon s7-menu"></i></a>@ViewBag.Title</h3>
                </div>
                <div class="panel-body bordered">
                    <div class="row2">
                        <div class="col-md-12 text-right">
                            <div style="height:32px;"></div>
                            <button data-toggle="modal" type="button" class="btn btn-space btn-success" onclick="showModal()"><i class="icon s7-plus"></i> Add Time Slot</button>
                        </div>
                    </div>
                    <div class="row2">
                        <div class="col-sm-12">
                            <div class="widget widget-fullwidth widget-small">
                                <div class="widget-head">
                                    <div class="title"><strong>@ViewBag.Title</strong></div>
                                </div>
                                <table class="table table-striped table-hover table-fw-widget">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Time Slot</th>
                                            <th>Rate</th>
                                            <th>Weekday?</th>
                                            <th>Weekends?</th>
                                            <th>Actived?</th>
                                            <th>Created At</th>
                                            <th>Updated At</th>
                                            <th>Option</th>
                                        </tr>
                                    </thead>
                                    @if (!datas.IsNullOrEmpty())
                                    {
                                    <tbody>
                                        @foreach (var item in datas)
                {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.TimeSlot</td>
                                            <td>@item.Rate</td>
                                            <td>
                                                @if (item.IsWeekday)
                                                        {
                                                    <div class="am-checkbox">
                                                        <input id="check5" type="checkbox" checked disabled="">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                                        else
                                                        {
                                                    <div class="am-checkbox">
                                                        <input id="check5" type="checkbox" disabled="">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                            </td>
                                            <td>
                                                @if (item.IsWeekend)
                                                        {
                                                    <div class="am-checkbox">
                                                        <input checked disabled type="checkbox">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                                        else
                                                        {
                                                    <div class="am-checkbox">
                                                        <input disabled type="checkbox">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                            </td>
                                            <td>
                                                @if (item.IsActive)
                                                        {
                                                    <div class="am-checkbox">
                                                        <input checked disabled type="checkbox">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                                        else
                                                        {
                                                    <div class="am-checkbox">
                                                        <input disabled type="checkbox">
                                                        <label for="check5"></label>
                                                    </div>
                                                        }
                                            </td>
                                            <td>@item.CreatedAt</td>
                                            <td>@item.UpdatedAt</td>
                                            <td>
                                                <button type="button" class="btn btn-space btn-dark btn-sm" title="Edit" onclick="openEdit(@item.Id)">
                                                    <i class="icon s7-pen"></i>
                                                </button>
                                                <button type="button" class="btn btn-space btn-danger btn-sm" onclick="showConfirm(@item.Id)" title="Delete">
                                                    <i class="icon s7-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                            }
                                    </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="confirm-delete" tabindex="-1" role="dialog" class="modal fade" data-id="">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close"></i></button>
                <h3>Are you sure want to delete?</h3>
            </div>
            <div class="footer-html">
                <button type="button" data-dismiss="modal" class="btn btn-default md-close">Cancel</button>
                <button id="delete-btn" type="button" class="btn btn-danger md-close" onclick="deleteDeliveryScheduler($('#confirm-delete').data('id'))">Delete</button>
            </div>
        </div>
    </div>
</div>

<div id="form-add-edit-scheduler" tabindex="-1" role="dialog" class="modal fade colored-header">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close-circle"></i></button>
                <h3 class="modal-title">Add Time Slot</h3>
            </div>
            <div class="modal-body form">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12" id="alert-err-msg" hidden>
                                            <div class="text-danger" style="white-space:pre-wrap"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label>Display Text</label>
                                            <input id="txtDisplayText" type="text" placeholder="Display Text" class="form-control">
                                            <div class="validation-error text-danger">
                                                <span class="field-validation-valid" data-valmsg-for="txtDisplayText" data-valmsg-replace="true" id="txtDisplayText_Err"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-6">
                                            <label>From Hour</label>
                                            <div data-start-view="0" data-date="1979-09-16T05:25:07Z" data-date-format="hh:ii" data-link-field="dtp_input1" class="input-group date datetimepicker">
                                                <input id="txtFromHour" size="16" type="text" value="" class="form-control" placeholder="From Hour"><span class="input-group-addon btn btn-primary"><i class="icon-th s7-date"></i></span>
                                            </div>
                                            <div class="validation-error text-danger">
                                                <span class="field-validation-valid" data-valmsg-for="txtFromHour" data-valmsg-replace="true" id="txtFromHour_Err"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label>To Hour</label>
                                            <div data-start-view="0" data-date="1979-09-16T05:25:07Z" data-date-format="hh:ii" data-link-field="dtp_input1" class="input-group date datetimepicker">
                                                <input id="txtToHour" size="16" type="text" value="" class="form-control" placeholder="To Hour"><span class="input-group-addon btn btn-primary"><i class="icon-th s7-date"></i></span>
                                            </div>
                                            <div class="validation-error text-danger">
                                                <span class="field-validation-valid" data-valmsg-for="txtToHour" data-valmsg-replace="true" id="txtToHour_Err"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label>Rate</label>
                                            <input id="txtRate" type="number" placeholder="Rate Value" class="form-control">
                                            <div class="validation-error text-danger">
                                                <span class="field-validation-valid" data-valmsg-for="txtRate" data-valmsg-replace="true" id="txtRate_Err"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label>How many order per slot</label>
                                            <input id="txtPerSlot" type="number" placeholder="How many order per slot" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label> Applicable on weekdays:&nbsp;&nbsp; </label>
                                            <div class="switch-button switch-button-success pull-right">
                                                <input type="checkbox" name="chkWeekday" id="chkWeekday"><span>
                                                    <label for="chkWeekday"></label>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label> Applicable on weekkends :&nbsp;&nbsp; </label>
                                            <div class="switch-button switch-button-success pull-right">
                                                <input type="checkbox" name="chkWeekend" id="chkWeekend"><span>
                                                    <label for="chkWeekend"></label>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label> Applicable on holidays :&nbsp;&nbsp; </label>
                                            <div class="switch-button switch-button-success pull-right">
                                                <input type="checkbox" name="chkHoliday" id="chkHoliday"><span>
                                                    <label for="chkHoliday"></label>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label> Is Active :&nbsp;&nbsp; </label>
                                            <div class="switch-button switch-button-success pull-right">
                                                <input type="checkbox" checked="" name="chkActive" id="chkActive"><span>
                                                    <label for="chkActive"></label>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-12 col-md-12">
                    <button type="button" data-dismiss="modal" class="btn btn-default btn-rc-sm md-close"><i class="icon s7-close-circle"></i>Close</button>
                    <button type="button" class="btn btn-primary btn-rc-sm" id="add-update-scheduler-btn" data-type="add"><i class="icon s7-diskette"></i>Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
