@model SBS_Ecommerce.Models.ConfigChatting

@{
    ViewBag.Title = "Chatting Manager";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<div id="successModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <strong>Success!</strong> <span id="contentAlert">Chatting successful configuration.</span>.
                </div>
            </div>
        </div>

    </div>
</div>
<div class="main-content">
    <!--+general-chart("classes", "title", "height", "id", "counter value", "counter desc", tools enabled (use true or false))-->
    <div class="content-blockmanager">
      <div>
          <div style="padding-bottom:5px;">Facebook Page ID</div>
          @if (Model != null)
          {
            <input type="text" id="txtPageID" value="@Model.PageID" style="margin-bottom:10px;" />
          }
          else
          {
            <input type="text" id="txtPageID" style="margin-bottom:10px;" />
          }

      </div>
      <input type="button" class="btn btn-success" value="Save" onclick="SaveConfig()" />
    </div>
</div>

<script>
    function SaveConfig() {
        $.ajax({
            url: '@Url.Action("SaveConfigChatting","Admin")',
            data: { pageID: $('#txtPageID').val() },
            success: function(rs){
                $('#successModal').modal('show');
              //  window.location.reload();
            }
        });
    }

    $('#successModal').on('click', function () {
        window.location.reload();
    });
</script>