@model List<SBS_Ecommerce.Models.BlogComment>
@{
    ViewBag.Title = "Blog Comment";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<div id="successModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            @*<div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>*@
            <div class="modal-body">
                <div class="alert alert-success">
                    <strong>Success!</strong> <span id="contentAlert">Commnent Blog successful deleted</span>.
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="confirm-delete" data-id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="left:auto">
        <div class="modal-content">
            <div class="modal-header">
                Are you sure delete this comment?
            </div>
            <div class="footer-html">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger btn-ok" onclick="DeleteBlogComment($('#confirm-delete').attr('data-id'))">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="main-content">
    <!--+general-chart("classes", "title", "height", "id", "counter value", "counter desc", tools enabled (use true or false))-->
    <div class="content-blockmanager">
        <div class="install-theme">
            <input onclick="ConfirmAddBlog()" class="btn btn-success" type="button" value="Create Page" />
            @*<input value="Upload" class="clr-btn-success" type="button"  style="margin-top:10px;text-align:right">*@
        </div>
        <table class="table table-striped table-hover table-fw-widget dataTable no-footer">
            <thead>
                <tr>
                    <th style="width:10%">Name</th>
                    <th style="width:10%">Comment at</th>
                    <th style="width:50%">Content</th>
                    <th style="width:30%">Operator</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.CreatedAt
                        </td>
                        <td>
                           @Html.Raw(item.Content)
                        </td>
                        <td>
                            <input value="Delete" type="button" class="btn btn-danger" onclick="ConfirmDelete(@item.Id)" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<script>
    $(function () {
        $(".table-striped").dataTable();
    });

    function ConfirmDelete(id) {
        $('#confirm-delete').attr('data-id', id);
        $('#confirm-delete').modal('show');
    }


    function DeleteBlogComment(id) {
        
        $.ajax({
            url: UrlContent('/Admin/DeleteBlogComment'),
            data: { id: id },
            type:'POST',
            success: function (rs) {
                $('#confirm-delete').modal('hide');
                $('#successModal').find('#contentAlert').text('Blog commnent successful deleted');
                $('#successModal').modal('show');
            }

        });
    }

    $(document).on('click', '#successModal', function () {
        window.location.reload();
    });
</script>