
@model List<SBS_Ecommerce.Models.ScheduleEmail>
@{
    ViewBag.Title = "Send Mail Manager";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    int idMarketing = ViewBag.IDMarketing;
}

<link rel="stylesheet" type="text/css" href="@Url.Content("~/amaretti/custom/css/sendmailmanager.css")" />

<script src="@Url.Content("~/Content/ckeditor/ckeditor.js")"></script>

<!-- Modal -->
<div id="successModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <strong>Success!</strong> <span id="contentAlert">Layout successful change</span>.
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="confirm-delete" data-id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="left:auto">
        <div class="modal-content">
            <div class="modal-header-main">
                <h3> Are you sure delete this Campaign?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger btn-ok" onclick="DeleteSchedual($('#confirm-delete').attr('data-id'))">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm-deactive" data-id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="left:auto">
        <div class="modal-content">
            <div class="modal-header-main">
                <h3> Are you sure change status this Campaign?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger btn-ok" onclick="DeactiveCampaign($('#confirm-deactive').attr('data-id'))">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="sendEmail" data-id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="left:auto">
        <div class="modal-content">
            <div class="modal-header-main">
                <h3>Send marketing email. </h3>
            </div>
            <div class="input-email">
                <label>Send to</label>
                <textarea type="text" id="txtEmail" name="txtEmail" style="width:100%;height:300px"></textarea>
                <div class="error-email"><span id="error-email">The address ""dasdasdsa.com"" in the "Send to" field was not recognized.</span></div>
            </div>
            <div class="subject-email">
                <div><label>Subject</label></div>
                <input type="text" id="txtSubjectEmail" style="width:100%" name="txtSubjectEmail" />
            </div>
            <div class="import-email">
                <input type="checkbox" id="checkbox-mailsystem"> <label for="checkbox-mailsystem">Import email from system</label>
            </div>
            <div class="select-email">
                <input type="checkbox" id="checkbox-schedule"> <label for="checkbox-schedule">Schedule to send</label>
                <div class="input-schedule">
                    <input id="datetimepicker2" data-format="MM/dd/yyyy HH:mm:ss" type="text" /><label for="datetimepicker2" style="font-size: 14px;padding-left: 5px;" class="glyphicon glyphicon-calendar"></label>
                    <script type="text/javascript">
                        $('#datetimepicker2').datetimepicker();
                    </script>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-12 col-md-12">
                    <button type="button" data-dismiss="modal" class="btn btn-default btn-rc-sm md-close"><i class="icon s7-close-circle"></i>Close</button>
                    <button type="button" class="btn btn-primary btn-rc-sm" id="add-update-scheduler-btn" onclick="SendCampaignEmail($('#sendEmail').attr('data-id'))"><i class="icon s7-diskette"></i>Save</button>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="edit-sendEmail" data-id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="left:auto">
        <div class="modal-content">
            <div class="modal-header-main">
                <h3>Edit schedual marketing email. </h3>
            </div>
            <div class="input-email">
                <label>Send to</label>
                <textarea type="text" id="edit-txtEmail" name="txtEmail" style="width:100%;height:300px"></textarea>
                <div class="error-email"><span id="edit-error-email">The address ""dasdasdsa.com"" in the "Send to" field was not recognized.</span></div>
            </div>
            <div class="subject-email">
                <div><label>Subject</label></div>
                <input type="text" id="edit-txtSubjectEmail" style="width:100%" name="txtSubjectEmail" />
            </div>
            <div class="import-email">
                <input type="checkbox" id="edit-checkbox-mailsystem"> <label for="edit-checkbox-mailsystem">Import email from system</label>
            </div>
            <div class="select-email">
                <input type="checkbox" id="edit-checkbox-schedule" checked> <label for="edit-checkbox-schedule">Schedule to send</label>
                <div class="edit-input-schedule">
                    <input id="edit-datetimepicker2" data-format="MM/dd/yyyy HH:mm:ss" type="text" /><label for="edit-datetimepicker2" style="font-size: 14px;padding-left: 5px;" class="glyphicon glyphicon-calendar"></label>
                    <script type="text/javascript">
                        $('#edit-datetimepicker2').datetimepicker();
                    </script>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger btn-ok" onclick="SaveSchedualEmail($('#edit-sendEmail').attr('data-id'))">Save</button>
            </div>
        </div>

    </div>
</div>

<div id="addCampaignModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Create Campaign</h3>
            </div>
            <div class="titleHTML">
                <div style="padding-bottom:5px;">Campaign Name&nbsp;</div>
                <input type="text" id="txtTitleHTML" name="txtTitleHTML" style="width:100%;"></input>
            </div>
            <div class="modal-body pointer">
                <textarea name="txtHTML" id="txtHTML" style="width:100%;height:250px;"></textarea>
            </div>
            <div class="footer-html">
                <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal" style="margin-top:10px" />
                <input class="btn btn-success btn-ok" value="Save" type="button" onclick="SaveCampaign()" style="margin-top:10px">
            </div>
        </div>
    </div>
</div>


<div class="main-content">
    <div class="row2">
        <div class="col-md-12">
            <div class="panel panel-dark">
                <div class="panel-heading">
                    <h3><a href="#" class="btn btn-primary am-toggle-left-sidebar"><i class="icon s7-menu"></i></a>Scheduals</h3>
                </div>
                <div class="panel-body bordered">
                    <div class="row2">
                        <div class="col-md-12 text-right">
                            <div style="height:32px;"></div>
                            <a onclick="CreateSchedual()" class="btn btn-space btn-success btn-rc-sm"><i class="icon s7-plus"></i>Create Schedual</a>
                        </div>
                    </div>
                    <div class="row2">
                        <div class="col-sm-12">
                            <div class="widget widget-fullwidth widget-small">
                                <div class="widget-head">
                                    <div class="title"><strong>Scheduals</strong></div>
                                </div>
                                <table class="table table-striped table-hover table-fw-widget">
                                    <thead>
                                        <tr>
                                            <th class="text-left">Subject</th>
                                            <th class="text-center" style="width:10%">Schedule</th>
                                            <th class="text-center" style="width:10%">Status</th>
                                            <th class="text-center" style="width:20%">Operator</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td class="text-left">@item.Subject</td>
                                            <td class="text-center">@item.Schedule</td>
                                            <td class="text-center">@((bool)item.Status ? "Complete" : "Pending")</td>
                                            <td class="text-center">
                                                @if ((bool)item.Status)
                                                    {
                                                    <input value="Edit" type="button" class="btn btn-success" onclick="EditSendEmail('@item.ID')" disabled />
                                                    }
                                                    else
                                                    {
                                                    <input value="Edit" type="button" class="btn btn-success" onclick="EditSendEmail('@item.ID')" />
                                                    }
                                                <input value="Delete" type="button" class="btn btn-danger" onclick="ConfirmDeleteSchedual('@item.ID')" />
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <hr style="clear:both;" />
                    <div id="content-Preview">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#successModal').on('click', function () {
        window.location.reload();
    });

    $(function () {
        CKEDITOR.replace('txtHTML');
        $(".table-striped").dataTable();
    });
    function CreateSchedual(id) {
        $('#sendEmail').attr('data-id', id);
        $('#datetimepicker2').val('');
        $('#txtSubjectEmail').val('');
        $('#error-email').text('').hide();
        $('#txtEmail').css('border-color', 'rgb(169, 169, 169)');
        $('#txtEmail').val('');
        $('#sendEmail').modal('show');
    }
    function CreateCampaign() {
        $('#addCampaignModal').find('h3').text('Create Campaign');
        $('#addCampaignModal').find('#txtTitleHTML').val('');
        CKEDITOR.instances['txtHTML'].setData('');
        $('#addCampaignModal').attr('data-type', 'create');
        $('#addCampaignModal').modal('show');
    }

    function SaveCampaign() {
        var name = $('#addCampaignModal').find('#txtTitleHTML').val();
        var content = CKEDITOR.instances['txtHTML'].getData();
        if ($('#addCampaignModal').attr('data-type') == 'create') {
            $.ajax({
                url: '@Url.Action("CreateCampaign","Admin")',
                type: 'POST',
                data: { name: name, content: content },
                success: function (rs) {
                    $('#addCampaignModal').modal('hide');
                    $('#successModal').find('#contentAlert').text('Campaign successful added');
                    $('#successModal').modal('show');
                    setTimeout(function () { window.location.reload(); }, 1500);
                }

            });
        }
        else {
            $.ajax({
                url: '@Url.Action("EditCampaign", "Admin")',
                type: 'POST',
                data: { id: $('#addCampaignModal').attr('data-id'), name: name, content: content },
                success: function (rs) {
                    $('#addCampaignModal').modal('hide');
                    $('#successModal').find('#contentAlert').text('Campaign successful edited');
                    $('#successModal').modal('show');
                    setTimeout(function () { window.location.reload(); }, 1500);
                }

            });
        }
    }

    function EditSendEmail(id) {
        $('#edit-sendEmail').attr('data-id', id);
        $('#edit-datetimepicker2').val('');
        $('#edit-txtSubjectEmail').val('');
        $('#edit-error-email').text('').hide();
        $('#edit-txtEmail').css('border-color', 'rgb(169, 169, 169)');
        $('#edit-txtEmail').val('');

        //Get information of campaign
        $.ajax({
            url: '@Url.Action("GetSchedual", "Admin")',
            data: { id: id },
            success: function (rs) {

                //$('#addCampaignModal').find('#txtTitleHTML').val(rs.NameCampain);
                //CKEDITOR.instances['txtHTML'].setData(rs.Content);
                //$('#addCampaignModal').attr('data-type', 'edit');
                $('#edit-txtEmail').val(rs.Email);
                $('#edit-txtSubjectEmail').val(rs.Subject);

                var date = rs.Schedule.replace('/Date(', '').replace(')/', '');
                var d = new Date();
                d.setTime(date);
                // var datetimePicker = d.getFullYear() + "-" + d.getMonth();
                var hour = '';
                if (d.getHours() < 10)
                    hour = "0" + d.getHours();
                else
                    hour = d.getHours();

                var minute = '';
                if (d.getMinutes() < 10)
                    minute = "0" + d.getMinutes();
                else
                    minute = d.getMinutes();

                var str = $.datepicker.formatDate('yy-mm-dd', d) + " " + hour + ":" + minute;
                $('#edit-datetimepicker2').val(str);
                $('#edit-sendEmail').modal('show');
            }

        });
    }

    function ConfirmDeleteSchedual(id) {
        $('#confirm-delete').attr('data-id', id);
        $('#confirm-delete').modal('show');
    }

    function DeleteSchedual(id) {
        $.ajax({
            url: '@Url.Action("DeleteSchedual", "Admin")',
            type: 'POST',
            data: { id: $('#confirm-delete').attr('data-id') },
            success: function (rs) {
                $('#confirm-delete').modal('hide');
                $('#successModal').find('#contentAlert').text('Campaign successful deleted');
                $('#successModal').modal('show');
                setTimeout(function () { window.location.reload(); }, 1500);
            }

        });
    }

    function ConfirmDeactiveCampaign(id) {
        $('#confirm-deactive').attr('data-id', id);
        $('#confirm-deactive').modal('show');
    }

    function DeactiveCampaign(id) {
        $.ajax({
            url: '@Url.Action("ChangeStatusCampaign", "Admin")',
            type: 'POST',
            data: { id: $('#confirm-deactive').attr('data-id') },
            success: function (rs) {
                $('#confirm-deactive').modal('hide');
                $('#successModal').find('#contentAlert').text('Campaign successful edited');
                $('#successModal').modal('show');
                setTimeout(function () { window.location.reload(); }, 1500);
            }

        });
    }


    $(document).on('click', '#checkbox-schedule', function () {
        var el = $(this).parent().find('.input-schedule');
        if ($(el).css('display') == 'none') {
            $(this).parent().find('.input-schedule').show();
        }
        else {
            $(this).parent().find('.input-schedule').hide();
            $('#datetimepicker2').val('');
        }

    });

    $(document).on('click', '#edit-checkbox-schedule', function () {
        var el = $(this).parent().find('.input-schedule');
        if ($(el).css('display') == 'none') {
            $(this).parent().find('.edit-input-schedule').show();
        }
        else {
            $(this).parent().find('.edit-input-schedule').hide();
            $('#edit-datetimepicker2').val('');
        }

    });

    function SendCampaignEmail(id) {
        var lstEmail = [];
        lstEmail = $('#txtEmail').val().trim().split(/ |,|;|\n/g);

        for (var i = 0; i < lstEmail.length; i++) {
            if (!validateEmail(lstEmail[i])) {
                if (lstEmail[i] != "") {
                    $('#error-email').text('The address "' + lstEmail[i] + '" in the "Send to" field was not recognized.').show();
                    $('#txtEmail').css('border-color', 'red');
                }
                else {
                    $('#error-email').text('The address cannot null.').show();
                    $('#txtEmail').css('border-color', 'red');
                }
                return false;
            }
        }

        $('#error-email').text('').hide();
        $('#txtEmail').css('border-color', 'rgb(169, 169, 169)');

        $.ajax({
            url: '@Url.Action("SendMail", "Admin")',
            type: 'POST',
            data: { time: $('#datetimepicker2').val(), lstEmail: lstEmail, subject: $('#txtSubjectEmail').val(), id: id },
            success: function (rs) {
                $('#sendEmail').modal('hide');
                $('#successModal').find('#contentAlert').text('Send mail successfully');
                $('#successModal').modal('show');
                setTimeout(function () { window.location.reload(); }, 1500);
            }

        });
    }

    function SaveSchedualEmail(id) {

        var lstEmail = [];
        lstEmail = $('#edit-txtEmail').val().trim().split(/ |,|;|\n/g);

        for (var i = 0; i < lstEmail.length; i++) {
            if (!validateEmail(lstEmail[i])) {
                if (lstEmail[i] != "") {
                    $('#edit-error-email').text('The address "' + lstEmail[i] + '" in the "Send to" field was not recognized.').show();
                    $('#edit-txtEmail').css('border-color', 'red');
                }
                else {
                    $('#edit-error-email').text('The address cannot null.').show();
                    $('#edit-txtEmail').css('border-color', 'red');
                }
                return false;
            }
        }

        $('#edit-error-email').text('').hide();
        $('#edit-txtEmail').css('border-color', 'rgb(169, 169, 169)');

        $.ajax({
            url: '@Url.Action("SaveShedualEmail", "Admin")',
            type: 'POST',
            data: { time: $('#edit-datetimepicker2').val(), lstEmail: lstEmail, subject: $('#edit-txtSubjectEmail').val(), id: id },
            success: function (rs) {
                $('#edit-sendEmail').modal('hide');
                $('#successModal').find('#contentAlert').text('Send mail successfully');
                $('#successModal').modal('show');
                setTimeout(function () { window.location.reload(); }, 1500);
            }

        });

    }

    $(document).on('click', '#checkbox-mailsystem', function () {
        if ($(this).prop('checked')) {
            $.ajax({
                url: '@Url.Action("GetEmailSystem", "Admin")',
                type: 'POST',
                data: {},
                success: function (rs) {
                    if (rs != "") {
                        if ($('#txtEmail').val().trim() == "") {
                            $('#txtEmail').val(rs.trim());
                        }
                        else {
                            $('#txtEmail').val($('#txtEmail').val() + rs);
                        }
                    }
                }

            });
        }
        else {
            $.ajax({
                url: '@Url.Action("GetEmailSystem", "Admin")',
                type: 'POST',
                data: {},
                success: function (rs) {
                    if (rs != "") {
                        if (rs.length > $('#txtEmail').val().length) {
                            $('#txtEmail').val($('#txtEmail').val().replace(rs.trim(), ''));
                        }
                        else {
                            $('#txtEmail').val($('#txtEmail').val().replace(rs, ''));
                        }
                    }
                }

            });
        }
    });

</script>
