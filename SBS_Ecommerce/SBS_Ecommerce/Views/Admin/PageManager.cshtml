@model List<SBS_Ecommerce.Models.Page>
@{
    ViewBag.Title = "Page Manager";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    var msg = ViewBag.Message;
    var textMsg = ViewBag.TextMessage;
}
<link rel="stylesheet" type="text/css" href="@Url.Content("~/amaretti/custom/css/pagemanager.css")" />
<script src="~/Content/ckeditor/ckeditor.js"></script>
<script src="~/Content/Admin/js/app-page-manager.js"></script>

<!-- Modal -->
<div id="successModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <strong>Success!</strong> <span id="contentAlert">Layout successful change</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm-delete" data-id="" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="left:auto">
        <div class="modal-content">
            <div class="modal-header-main">
                <h3>Are you sure delete this Page?</h3>
            </div>
            <div class="footer-html">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button class="btn btn-danger btn-ok" onclick="DeletePage($('#confirm-delete').attr('data-id'))">Delete</button>
            </div>
        </div>
    </div>
</div>

<div id="addPageModal" tabindex="-1" role="dialog" class="modal fade colored-header">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><i class="icon s7-close-circle"></i></button>
                <h3 class="modal-title">Add Block</h3>
            </div>
            <div class="modal-body form">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12" id="alert-err-msg" hidden>
                                            <div class="text-danger" style="white-space:pre-wrap"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label>Name</label>
                                            <input id="txtTitleHTML" type="text" class="form-control">
                                            <div class="validation-error text-danger">
                                                <span class="field-validation-valid" data-valmsg-for="txtMin" data-valmsg-replace="true" id="errorTitle">The Title is required.</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row2">
                                    <div class="container-fluid">
                                        <div class="col-md-12">
                                            <label>Detail</label>
                                            <textarea name="txtHTML" id="txtHTML" style="width:100%;height:250px;"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-12 col-md-12">
                    <button type="button" data-dismiss="modal" class="btn btn-default btn-rc-sm md-close"><i class="icon s7-close-circle"></i>Close</button>
                    <button type="button" class="btn btn-primary btn-rc-sm" onclick="SavePage()"><i class="icon s7-diskette"></i>Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="preBlockModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Preview Block</h3>
            </div>
            <div class="content-block">
            </div>
        </div>
    </div>
</div>

<div class="main-content">
    <div class="col-md-12">
        <div class="panel panel-dark">
            <div class="panel-heading">
                <h3><a href="#" class="btn btn-primary am-toggle-left-sidebar"><i class="icon s7-menu"></i></a>@ViewBag.Title</h3>
            </div>
            <div class="panel-body bordered">
                <div class="row2">
                    <div class="container-fluid">
                        <div class="col-md-12 text-right">
                            <div style="height:32px;"></div>
                            <a onclick="ConfirmAddPage()" class="btn btn-space btn-success btn-rc-sm"><i class="icon s7-plus"></i> Create Page</a>
                        </div>
                    </div>
                </div>
                <div class="row2">
                    <div class="col-sm-12">
                        <div class="widget widget-fullwidth widget-small">
                            <div class="widget-head">
                                <div class="title"><strong>@ViewBag.Title</strong></div>
                            </div>
                            <table class="table table-striped table-hover table-fw-widget">
                                <thead>
                                    <tr>
                                        <th style="width:10%">Id</th>
                                        <th style="width:30%">Name</th>
                                        <th style="width:30%">Link Page</th>
                                        <th style="width:15%">Operator</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.ID
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                <a href="@Url.Content("~/Pages/Index/")@item.ID">/Pages/Index/@item.ID</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-sm btn-dark" onclick="ConfirmEditBlock('@item.ID')" title="Edit">
                                                    <i class="icon s7-pen"></i>
                                                </a>
                                                <a class="btn btn-sm btn-danger" onclick="ConfirmDelete(@item.ID)" title="Delete">
                                                    <i class="icon s7-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>