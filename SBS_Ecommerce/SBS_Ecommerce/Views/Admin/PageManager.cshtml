@model List<SBS_Ecommerce.Models.Page>
@{
    ViewBag.Title = "Page Manager";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
@*<link rel="stylesheet" type="text/css" href="@Url.Content("~/amaretti/custom/css/pagemanager.css")" />*@

<script src="~/Content/ckeditor/ckeditor.js"></script>
<script src="~/Content/Admin/js/app-page-manager.js"></script>

<!-- Modal -->
<div id="successModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <strong>Success!</strong> <span id="contentAlert">Layout successful change</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="left:auto">
        <div class="modal-content">
            <div class="modal-header-main">
                <h3>Are you sure delete this Page?</h3>
            </div>
            <div class="footer-html">
                <form action="@Url.Action("DeletePage", "Admin")" method="post">
                    <input id="idPage" hidden name="id"/>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger btn-ok">Delete</button>
                </form>                
            </div>
        </div>
    </div>
</div>

<div id="addPageModal" tabindex="-1" role="dialog" class="modal fade colored-header">
    
</div>

<div id="preBlockModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" style="left: auto;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header-main">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Preview Block</h3>
            </div>
            <div class="content-block">
            </div>
        </div>
    </div>
</div>

<div class="main-content">
    @if (TempData["Message"] != null)
    {
        <div class="container-fluid padded">
            <div class="row-fluid">
                <div class="span12">
                    @if (TempData["Status"] != null && (int)TempData["Status"] == -1)
                    {
                        <div class="alert alert-primary">
                            <button type="button" data-dismiss="alert" aria-label="Close" class="close">
                                <span aria-hidden="true" class="s7-close"></span>
                            </button><span id="alert-msg-success">@TempData["Message"]</span>
                            <br />
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <button type="button" data-dismiss="alert" aria-label="Close" class="close">
                                <span aria-hidden="true" class="s7-close"></span>
                            </button><span id="alert-msg-success">@TempData["Message"]</span>
                            <br />
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    <div class="col-md-12">
        <div class="panel panel-dark">
            <div class="panel-heading">
                <h3><a href="#" class="btn btn-primary am-toggle-left-sidebar"><i class="icon s7-menu"></i></a>@ViewBag.Title</h3>
            </div>
            <div class="panel-body bordered">
                <div class="row2">
                    <div class="container-fluid">
                        <div class="col-md-12 text-right">
                            <div style="height:32px;"></div>
                            <a onclick="addPage()" class="btn btn-space btn-success btn-rc-sm"><i class="icon s7-plus"></i> Create Page</a>
                        </div>
                    </div>
                </div>
                <div class="row2">
                    <div class="col-sm-12">
                        <div class="widget widget-fullwidth widget-small">
                            <div class="widget-head">
                                <div class="title"><strong>@ViewBag.Title</strong></div>
                            </div>
                            <table class="table table-striped table-hover table-fw-widget">
                                <thead>
                                    <tr>
                                        <th style="width:10%">Id</th>
                                        <th style="width:30%">Name</th>
                                        <th style="width:30%">Link Page</th>
                                        <th style="width:15%">Operator</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.ID
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                <a href="@Url.Content("~/Pages/Index/")@item.ID">/Pages/Index/@item.ID</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-sm btn-dark" onclick="editPage('@item.ID')" title="Edit">
                                                    <i class="icon s7-pen"></i>
                                                </a>
                                                <a class="btn btn-sm btn-danger" onclick="ConfirmDelete(@item.ID)" title="Delete">
                                                    <i class="icon s7-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>