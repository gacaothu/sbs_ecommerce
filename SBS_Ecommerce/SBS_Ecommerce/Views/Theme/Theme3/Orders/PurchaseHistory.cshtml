@model IEnumerable<SBS_Ecommerce.Models.Order>
@{
    Layout = "~/Views/Theme/Theme3/_Layout.cshtml";
}

<div class="main-wrap static-page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-heading">
                    <h4 class="page-title">Puschase history</h4>
                </div>
            </div>
        </div>
            <div class="ibox-title">
                <form>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="product_name" class="control-label">Product Name</label>
                                <input type="text" class="form-control" placeholder="Product Name" value="" name="product_name" id="product_name">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="price" class="control-label">Date from</label>
                                <input type="text" class="form-control" placeholder="Date from" value="" name="dateFrom" id="dateFrom">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="quantity" class="control-label">Date to</label>
                                <input type="text" class="form-control" placeholder="Date to" value="" name="dateTo" id="dateTo">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="status" class="control-label">Status</label>
                                <select class="form-control" id="status" name="status">
                                    <option selected="" value="1">Delivered</option>
                                    <option value="0">Cancel</option>
                                    <option value="0">Pending</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label for="status" class="control-label">&nbsp;</label><br />
                                <button class="btn btn-space btn-success">Search</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        <div class="row">
            <div class="col-md-12">
                <table id="cart_summary" class="cart_summery">
                    <tbody>
                        <tr>
                            <th class="cart_product">Date</th>
                            <th class="cart_description">Order</th>
                            <th class="cart_avail">Paid With</th>
                            <th class="cart_unit_price">Amount</th>
                            <th class="cart_quantity">Status</th>
                            <th class="cart_delete">&nbsp;</th>
                        </tr>
                        <tr>
                            <td class="cart_desc_content">Sep 22</td>
                            <td class="cart_unit_price_content">OR-498237482374</td>
                            <td class="cart_quantity_content">Paypal</td>
                            <td class="cart_total_item_price"><span class="price">$26.00</span></td>
                            <td class="cart_avail_content"><span class="availability-status label label-success">Delivered</span></td>
                            <td class="cart_delete_item"><a>Detail</a></td>
                        </tr>
                        <tr>
                            <td class="cart_desc_content">Sep 22</td>
                            <td class="cart_unit_price_content">OR-498237482374</td>
                            <td class="cart_quantity_content">Paypal</td>
                            <td class="cart_total_item_price"><span class="price">$26.00</span></td>
                            <td class="cart_avail_content"><span class="availability-status label label-danger">Cancel</span></td>
                            <td class="cart_delete_item"><a>Detail</a></td>
                        </tr>
                        <tr>
                            <td class="cart_desc_content">Sep 22</td>
                            <td class="cart_unit_price_content">OR-498237482374</td>
                            <td class="cart_quantity_content">Paypal</td>
                            <td class="cart_total_item_price"><span class="price">$26.00</span></td>
                            <td class="cart_avail_content"><span class="availability-status label label-warning">Pending</span></td>
                            <td class="cart_delete_item"><a>Detail</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="next-wrap">
                <div class="col-md-6">
                    <a href="#" class="btn btn-default"><i class="fa fa-angle-left"></i> Continue shopping</a>
                </div>
              
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>This is a large modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
</div>
