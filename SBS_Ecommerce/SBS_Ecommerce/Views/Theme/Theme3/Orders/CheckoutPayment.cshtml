@using SBS_Ecommerce.Models.DTOs;
@using SBS_Ecommerce.Models.Base;
@{
    Layout = "~/Views/Theme/Theme3/_Layout.cshtml";
    Cart cart = (Cart)Session["Cart"];
}

<!--------------- Main wrap --------------->
<div class="main-wrap static-page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-heading">
                    <h4 class="page-title">Shopping-cart Summary</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <ul class="cart-steps">
                    <li class="cart-step summery complete ">01. Summary</li>
                    <li class="cart-step account complete">02. Sign in</li>
                    <li class="cart-step address complete ">03. Address</li>
                    <li class="cart-step payment current">04. Payment</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="method-list checkout-page">
                    <h4>Choose Payment Option</h4>
                    @using (Html.BeginForm(null,null,FormMethod.Post,new {@id="frmPaymentSubmit" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel-body panel-checkout-payment">
                            <div class="payment-option">
                                <div class="method-name">
                                    <span class="payment-logo">
                                        <img src="@Url.Content("~/Content/Theme/Theme3/img/payment/logo_Money_Order.jpg")" />
                                    </span>
                                    <span class="payment-details">
                                        <input id="paymentmethod_0" type="radio" name="PaymentMethod" value="Payments.CheckMoneyOrder" checked="checked">
                                        <label for="paymentmethod_0">Bank Transfer</label>
                                    </span>
                                </div>
                                <div class="payment_wrap">
                                    <p>
                                        You can pay in cash to our carrier when you receive the goods at your doorstep.
                                    </p>
                                    <div class="payment-adition">
                                        <p><u>Notice:</u></p>
                                        <p>- Remember to check your order information on the right since this information cannot be changed after we confirm your order.</p>
                                        <p>- We will not confirm your order via SMS so please check your order information in our notification email.</p>
                                        <p>- In order to protect our individual buyers, We will limit the quantity of product per order. Also, we are sorry to reject those orders with many duplicated items (reseller threat).</p>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <div class="payment-option">
                                <div class="method-name">
                                    <span class="payment-logo">
                                        <img src="@Url.Content("~/Content/Theme/Theme3/img/payment/logo_Credit_Card.jpg")" alt="Credit Card ($1.00)" />
                                    </span>
                                    <span class="payment-details">
                                        <input id="paymentmethod_1" type="radio" name="PaymentMethod" value="Payments.Manual">
                                        <label for="paymentmethod_1">Credit Card</label>
                                    </span>
                                </div>
                                <div class="payment_wrap">
                                    <table width="100%" cellspacing="2" cellpadding="1" border="0">
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <label for="CreditCardTypes">Select credit card</label>:
                                                </td>
                                                <td>
                                                    <select class="dropdownlists valid form-control" id="CreditCardType" name="CreditCardType">
                                                        <option value="Visa">Visa</option>
                                                        <option value="MasterCard">Master card</option>
                                                        <option value="Discover">Discover</option>
                                                        <option value="Amex">Amex</option>
                                                    </select>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="CardholderName">Cardholder name</label>:
                                                </td>
                                                <td>
                                                    <input autocomplete="off" id="CardholderName" name="CardholderName" style="Width: 165px;" type="text" class="form-control" value="">
                                                    <span class="field-validation-valid" data-valmsg-for="CardholderName" data-valmsg-replace="true"></span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="CardNumber">Card number</label>:
                                                </td>
                                                <td>
                                                    <input autocomplete="off" id="CardNumber" maxlength="22" name="CardNumber" style="Width: 165px; " class="form-control" type="text" value="">
                                                    <span class="field-validation-valid" data-valmsg-for="CardNumber" data-valmsg-replace="true"></span>
                                                    <i class="fa fa-cc-visa" aria-hidden="true" style="padding-top: 10px;"></i>
                                                    <i class="fa fa-cc-mastercard" aria-hidden="true"></i>
                                                    <i class="fa fa-cc-amex" aria-hidden="true"></i>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="ExpireMonth">Expiration date</label>:
                                                </td>
                                                <td>
                                                    <select id="ExpireMonth" name="ExpireMonth" style="Width: 60px; float:left" class="form-control">
                                                        <option value="1">01</option>
                                                        <option value="2">02</option>
                                                        <option value="3">03</option>
                                                        <option value="4">04</option>
                                                        <option value="5">05</option>
                                                        <option value="6">06</option>
                                                        <option value="7">07</option>
                                                        <option value="8">08</option>
                                                        <option value="9">09</option>
                                                        <option value="10">10</option>
                                                        <option value="11">11</option>
                                                        <option value="12">12</option>
                                                    </select>
                                                    <select id="ExpireYear" name="ExpireYear" style="Width: 80px;" class="valid form-control">
                                                        <option value="2017">2017</option>
                                                        <option value="2018">2018</option>
                                                        <option value="2019">2019</option>
                                                        <option value="2020">2020</option>
                                                        <option value="2021">2021</option>
                                                        <option value="2022">2022</option>
                                                        <option value="2023">2023</option>
                                                        <option value="2024">2024</option>
                                                        <option value="2025">2025</option>
                                                        <option value="2026">2026</option>
                                                        <option value="2027">2027</option>
                                                        <option value="2028">2028</option>
                                                        <option value="2029">2029</option>
                                                        <option value="2030">2030</option>
                                                        <option value="2031">2031</option>
                                                    </select>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <label for="CardCode">Card code</label>:
                                                </td>
                                                <td>
                                                    <input autocomplete="off" id="CardCode" maxlength="4" name="CardCode" style="Width: 60px;" type="text" class="form-control" value="">
                                                    <span class="field-validation-valid" data-valmsg-for="CardCode" data-valmsg-replace="true"></span>
                                                    <i class="fa fa-credit-card" aria-hidden="true" style="padding-top: 10px;"></i>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <br>
                            <div>
                                <div class="method-name">
                                    <span class="payment-logo">
                                        <img src="@Url.Content("~/Content/Theme/Theme3/img/payment/logo_Purchase_Order.jpg")" alt="Purchase Order" />
                                    </span>
                                    <span class="payment-details">
                                        <input id="paymentmethod_3" type="radio" name="PaymentMethod" value="Payments.PurchaseOrder">
                                        <label for="paymentmethod_3">COD</label>
                                    </span>
                                </div>
                                <div class="payment_wrap">
                                    <p>Form payment</p>
                                </div>
                            </div>
                            <br>
                            <div class="payment-option">
                                <div class="method-name">
                                    <span class="payment-logo">
                                        <img src="@Url.Content("~/Content/Theme/Theme3/img/payment/logo_PayPal_Standard.jpg")" alt="PayPal Standard" />
                                    </span>
                                    <span class="payment-details">
                                        <input id="paymentmethod_4" type="radio" name="PaymentMethod" value="Payments.PayPalStandard">
                                        <label for="paymentmethod_4">Paypal</label>
                                    </span>
                                </div>
                                <div class="payment_wrap">
                                    <div id="checkout-payment-info-load">
                                        <div>

                                            <div class="row noproot-opc-payment-info">
                                                <div class="col-lg-12">
                                                    You will be redirected to PayPal site to complete the order.
                                                </div>
                                            </div>
                                            <div class="row">

                                                <div class="alert">
                                                    <div class="validation-summary-valid" data-valmsg-summary="true">
                                                        <ul>
                                                            <li style="display:none"></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                    }
                    <br>
                </div>
            </div>
            <div class="next-wrap">
                <div class="col-md-6">
                    <a href="@Url.Content("~/Home/Index")" class="btn btn-default"><i class="fa fa-angle-left"></i> Continue shopping</a>
                </div>
                <div class="col-md-6 text-right">
                    <a href="#" class="btn btn-default" onclick="confirmPayment();">Confirm <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(".payment-option input[type=radio]").click(function () {
        $(".payment_wrap").hide()
        $(this).parents(".method-name").next().show();
    })
    $(".payment-option input:checked").parents(".method-name").next().show();
</script>
