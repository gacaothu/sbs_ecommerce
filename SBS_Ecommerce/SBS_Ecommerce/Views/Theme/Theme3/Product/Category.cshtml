<script>
    function sortProduct() {
        var orderby = $('#orderby').val();
        $.ajax({
            type: 'POST',
            url: "/Product/SortProduct",
            data: {
                fromPage: "Category",
                orderby: orderby
            },
            success: function (rs) {
                $('.products').empty();
                $('.products').append(rs);
            },
            error: function (rs) {
                console.log(rs);
            }
        });
    }
</script>