@model PagedList.IPagedList<SBS_Ecommerce.Models.DTOs.OrderDTO>
@using PagedList.Mvc;
@using SBS_Ecommerce.Models.Extension
@using SBS_Ecommerce.Framework.Utilities;
@{
    var pathName = BaseUtil.Instance.GetPathTheme();
    Layout = pathName + "/Account/_MyProfile.cshtml";
}

<div class="main-wrap static-page">
    <div class="panel panel-default form-panel">
        <div class="panel-heading">
            <h3>Puschase history</h3>
        </div>
        <div class="panel-body">
            <div class="ibox-title">
                <form action="@Url.Content("~/Account/OrderHistory")" method="get">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="product_name" class="control-label">Product Name</label>
                                <input type="text" class="form-control" placeholder="Product Name" name="ProductName" id="product_name" value="@ViewBag.ProductName">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="price" class="control-label">Date from</label>
                                <div class='input-group'>
                                    <input type='text' class="date datetimepicker form-control" name="dateFrom" id="dateFrom" placeholder="Date from" value="@ViewBag.DateFrom" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="quantity" class="control-label">Date to</label>
                                <div class='input-group'>
                                    <input type='text' class="date datetimepicker form-control" name="dateTo" id="dateTo" placeholder="Date to" value="@ViewBag.DateTo" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="status" class="control-label">Status</label>
                                @Html.DropDownList("OrderStatus", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="status" class="control-label">&nbsp;</label><br />
                                <button class="btn btn-space btn-success">Search</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table id="cart_summary" class="cart_summery table">
                        <tbody>
                            <tr>
                                <th class="cart_date">Date</th>
                                <th class="cart_quantity">Status</th>
                                <th class="cart_product">Items</th>
                                <th class="cart_unit_price">Amount</th>
                                <th class="cart_avail">Paid With</th>
                                <th class="cart_description">Detail</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                    </td>
                                    <td>
                                        @if (item.OrderStatus == ((int)OrderStatus.Pending))
                                        {
                                            <span class="label label-default">Pending</span>
                                        }
                                        @if (item.OrderStatus == ((int)OrderStatus.Processing))
                                        {
                                            <span class="label label-primary">Processing</span>
                                        }
                                        @if (item.OrderStatus == ((int)OrderStatus.Completed))
                                        {
                                            <span class="label label-success">Completed</span>
                                        }
                                        @if (item.OrderStatus == ((int)OrderStatus.Cancelled))
                                        {
                                            <span class="label label-warning">Completed</span>
                                        }
                                    </td>
                                    <td>
                                        <ul class="item-order-detail">
                                            @foreach (var detail in item.OrderDetails)
                                            {
                                                <li><a href="@Url.Content("~/Product/Details/"+detail.ProId)"><span class="attr_value_new">@detail.ProductName</span></a> <span>@Html.DisplayFor(modelItem => item.Currency) @detail.Price Qty: @detail.Quantity </span> </li>
                                            }
                                        </ul>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalAmount) @Html.DisplayFor(modelItem => item.Currency)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaymentName)
                                    </td>
                                    <td>
                                        <a href="@Url.Content("~/Orders/PurchaseProcess?orderId="+item.OrderId)">
                                            <span class="attr_value_new">
                                                @Html.DisplayFor(modelItem => item.OrderId)
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("OrderHistory", "Account", new
               {
                   page,
                   ProductName = @ViewBag.ProductName,
                   dateFrom = @ViewBag.DateFrom,
                   dateTo = @ViewBag.DateTo,
                   OrderStatus = @ViewBag.OrderStatusId

               }))
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function ViewDetail(idOrder) {
        $("#modelOrderDetail").modal('show');
    }
    $('.datetimepicker').datetimepicker({
        format: 'mm/dd/yyyy',
        minView: 2,
        maxView: 4,
        autoclose: true
    });
</script>
