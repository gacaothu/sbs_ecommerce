@using SBS_Ecommerce.Models.DTOs;

<div class="col-md-12 weekly-report" style="text-align: center">
    <div class="header-report">
        <h5>Select a Time and Date</h5>
        <ul class="nav nav-tabs tablist-order" role="tablist" id="main-tab" style="text-align: center">
            <li class="prev disabled" title="Previous Week"><a href=""><</a></li>
            @{
                var tabWeek = ViewBag.TabWeek as List<TabWeekDTO>;
            }
            @for (int i = 0; i < tabWeek.Count; i++)
            {
                var tabid = "tab" + (i + 1);
                var panelid = "week0" + (i + 1);
                if (i == 0)
                {
                    <li id="@tabid" role="presentation" class="active"><a href="#@panelid" role="tab" data-toggle="tab" onclick="tabChange(@(i+1))">@tabWeek[i].TabLabel</a></li>
                }
                else
                {
                    <li id="@tabid" role="presentation"><a href="#@panelid" role="tab" data-toggle="tab" onclick="tabChange(@(i+1))">@tabWeek[i].TabLabel</a></li>
                }
            }
            <li class="next" title="Next Week"><a href="">></a></li>
        </ul>
    </div>
    <div class="tab-content">
        @{
            int sundayIndex = 0;
            var timeSlots = ViewBag.TimeSlot;
        }
        <div role="tabpanel" class="tab-pane fade in active" id="week01">
            <div class="row">
                <div class="panel-body">
                    <table id="table1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                @for (int i = 0; i < tabWeek[0].DateRows.Count; i++)
                                {
                                    if (tabWeek[0].DateRows[i].DateTime.Contains("Sun"))
                                    {
                                        sundayIndex = i;
                                    }
                                    <th>
                                        @Html.Raw(tabWeek[0].DateRows[i].DateTime)
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < timeSlots.Count; i++)
                            {
                                <tr>
                                    <td>@timeSlots[i].TimeSlot</td>
                                    @for (int j = 0; j < 7; j++)
                                    {
                                        if (sundayIndex == j)
                                        {
                                            <td>Full</td>
                                        }
                                        else
                                        {
                                            <td>SGD @timeSlots[i].Rate</td>
                                        }
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade in" id="week02">
            <div class="row">
                <div class="panel-body">
                    <table id="table1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                @foreach (var item in tabWeek[1].DateRows)
                                {
                                    <th>
                                        @Html.Raw(item.DateTime)
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < timeSlots.Count; i++)
                            {
                                <tr>
                                    <td>@timeSlots[i].TimeSlot</td>
                                    @for (int j = 0; j < 7; j++)
                                    {
                                        if (sundayIndex == j)
                                        {
                                            <td>Full</td>
                                        }
                                        else
                                        {
                                            <td>SGD @timeSlots[i].Rate</td>
                                        }
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade in" id="week03">
            <div class="row">
                <div class="panel-body">
                    <table id="table1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                @foreach (var item in tabWeek[2].DateRows)
                                {
                                    <th>
                                        @Html.Raw(item.DateTime)
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < timeSlots.Count; i++)
                            {
                                <tr>
                                    <td>@timeSlots[i].TimeSlot</td>
                                    @for (int j = 0; j < 7; j++)
                                    {
                                        if (sundayIndex == j)
                                        {
                                            <td>Full</td>
                                        }
                                        else
                                        {
                                            <td>SGD @timeSlots[i].Rate</td>
                                        }
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>