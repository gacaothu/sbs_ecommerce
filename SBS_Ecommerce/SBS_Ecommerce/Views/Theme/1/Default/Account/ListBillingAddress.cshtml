@using SBS_Ecommerce.Models.DTOs;
@using SBS_Ecommerce.Framework.Utilities;
@{
    var pathName = BaseUtil.Instance.GetPathTheme();
    Layout = pathName + "/Account/_MyProfile.cshtml";
}
<div class="panel panel-default form-panel">
    <div class="panel-heading">
        <h3>My account - Billing Addresses</h3>
    </div>
    <div class="panel-body address-list-page">
        @if (Model.Count > 0)
        {
            <div class="address-list">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissable">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                        <strong>Success!</strong> @TempData["Message"]
                    </div>
                }

                @foreach (var item in Model)
                {
                    <div class="section address-item">
                        <div id="legend">
                            <div class="buttons pull-right">
                                <input type="button" class="button-2 edit-address-button btn btn-default" onclick="location.href='@Url.Content("~/Account/EditShippingAddress/"+@item.Id)'" value="Edit">
                                <input type="button" class="button-2 delete-address-button btn btn-default" onclick="DeleteCustomerAddress('@item.Id')" value="Delete">
                            </div>
                        </div>
                        <ul class="info">
                            <li class="name">
                                <h5><strong>@item.ReceiverFirstName @item.ReceiverLastName</strong></h5>
                            </li>
                            <li class="address">
                                @item.Address
                            </li>
                            <li class="city-state-zip">
                                @item.City , @item.State, @item.ZipCode
                            </li>
                            <li class="country">
                                @item.Country
                            </li>
                            <li class="phone">
                                @item.Phone
                            </li>
                        </ul>

                    </div>
                }

            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <strong>Message!</strong> You have no billing invoice address.
            </div>
            <div class="add-button">
                <input type="button" class="button-1 add-address-button btn btn-success" onclick="location.href = '@Url.Content("~/Account/AddBillingAddress")'" value="Add new">
            </div>
        }
    </div>
</div>

