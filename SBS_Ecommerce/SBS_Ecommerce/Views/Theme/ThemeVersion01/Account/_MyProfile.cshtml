@using SBS_Ecommerce.Models.DTOs;
@using SBS_Ecommerce.Framework;

@{
    Layout = SBS_Ecommerce.Framework.Utilities.BaseUtil.Instance.GetLayout();
}
@{
    List<Category> lstCategory = SBSCommon.Instance.GetCategories();
}

<div class="main-wrap static-page">
    <div class="container">
        <div class="row">
            <div class="col-md-3">

                <div class="panel panel-default side-nav">
                        <h4 class="module-title">My account</h4>
                    <div class="module-content">
                        <ul class="side-menu">

                            <li class="customer-info menu-item">
                                <a href="@Url.Content("~/Account/InforCustomer")" class="inactive">Customer info</a>
                            </li>
                            <li class="customer-addresses menu-item">
                                <a href="@Url.Content("~/Account/ListShippingAddress")" class="active">Shipping Addresses</a>
                            </li>
                            <li class="customer-addresses menu-item">
                                <a href="@Url.Content("~/Account/ListBillingAddress")" class="active">Billing Addresses</a>
                            </li>
                            <li class="customer-orders menu-item">
                                <a href="@Url.Content("~/Account/OrderHistory")" class="inactive">Orders</a>
                            </li>
                            <li class="change-password menu-item">
                                <a href="@Url.Content("~/Manage/ChangePassword")" class="inactive">Change password</a>
                            </li>
                            @*<li class="customer-reviews menu-item">
                                <a href="@Url.Content("~/Account/ProductReviews")" class="inactive">My product reviews</a>
                            </li>*@
                            <li class="change-avartar menu-item">
                                <a href="@Url.Content("~/Account/ChangeAvatar")" class="inactive">Change avatar</a>
                            </li>
                            <li class="credit-point menu-item">
                                <a href="@Url.Content("~/Account/CreditPoint")" class="inactive">Credit Point</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
