@{
    SBS_Ecommerce.Framework.Utilities.CompanyUtil cpUT = new SBS_Ecommerce.Framework.Utilities.CompanyUtil();
    var pathTheme = cpUT.GetPathTheme();
    Layout = pathTheme + "/Account/_MyProfile.cshtml";
}
<div class="panel panel-default form-panel">
    <div class="panel-heading">
        <h3>My account - Change my avatar</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("UploadAvatar",
                                "Account",
                                FormMethod.Post,
                                new { enctype = "multipart/form-data" }))
        {
            <label class="btn btn-success btn-file">
                <i class="fa fa-cloud-upload"></i>   Browse  <input type="file" name="file" id="file-avatar" onchange="showMyImage(this)" style="display: none;">
            </label>
            <input type="submit" value="Upload" class="btn btn-default" />
            
            <br />
            <img id="thumbnil" style="width:20%; margin-top:10px;" src="@Url.Content(@ViewBag.UrlAvartar)" alt="image" />
            <br/>
            if(@ViewBag.NoAvatar !=true)
            {
                <br /><p>
                    <input type="button" value="Remove" class="btn btn-danger " onclick="RemoveAvartar();" />
                </p>
            }

        }
    </div>
</div>